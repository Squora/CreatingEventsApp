<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CreatingEventsApp.View.PasswordRecoveryPage">
    <Grid BackgroundColor="LightGray">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="20, 0, 20, 150">
            <Label Text="Введите вашу почту" TextColor="Black"/>
            <Frame WidthRequest="250" HeightRequest="80" BorderColor="White" CornerRadius="5">
                <Entry x:Name="eLoginRecovery" VerticalOptions="Center" Keyboard="Email"/>
            </Frame>
            <Button x:Name="btnPasswordRecovery" Margin="0, 10, 0, 0" BackgroundColor="Green" Text="Отправить"
                    Clicked="btnPasswordRecovery_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>